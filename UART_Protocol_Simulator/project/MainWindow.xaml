        <Rectangle x:Name="SPD_underSelect" Fill="#FF6F6FFF" HorizontalAlignment="Left" Width="30" Margin="287,101,0,204.4"/>
        <TextBlock x:Name="textBlock_payloadContent" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="25" FontWeight="Bold" TextDecorations="{x:Null}" RenderTransformOrigin="2.124,0.743" FontSize="16" Width="64" Margin="0,176,0,0"><Run Text="Payload"/></TextBlock>
        <TextBlock x:Name="textBlock_Graphic_None" HorizontalAlignment="Left" Margin="317,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="19" FontWeight="Bold" TextDecorations="{x:Null}" RenderTransformOrigin="2.124,0.743" FontSize="16" Width="30" Text="----"/>
        <TextBox x:Name="textBox_payloadContent" HorizontalAlignment="Left" Height="82" Margin="69,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Background="#FF3E3E42" BorderBrush="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="White" SelectionTextBrush="{x:Null}" IsReadOnly="True"/>
        <Button x:Name="button_RandomizePayload" Content="RANDOMIZE" HorizontalAlignment="Left" Margin="69,263,0,0" VerticalAlignment="Top" Width="135" BorderBrush="{x:Null}" Background="#FF3E3E42" Foreground="White" FontSize="16" FontWeight="Bold" Click="button_RandomizePayload_Click"/>
        <TextBlock x:Name="textBlock_randWarning" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFFD300" Height="25" FontWeight="Bold" TextDecorations="{x:Null}" RenderTransformOrigin="2.124,0.743" FontSize="16" Width="108" Margin="209,265,0,0" Visibility="Hidden"><Run Text="!"/><Run Text=" "/><Run Text="~"/><Run Text=" 4s"/></TextBlock>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="112" Margin="64,176,0,0" VerticalAlignment="Top" Width="2"/>
        <ListBox x:Name="listBox_avPorts" HorizontalAlignment="Left" Height="82" Margin="339,176,0,0" VerticalAlignment="Top" Width="123" RenderTransformOrigin="0.974,0.568" Background="#FF3E3E42" BorderBrush="{x:Null}" FontSize="16" FontWeight="Bold" Foreground="White" SelectionChanged="listBox_avPorts_SelectionChanged"/>
        <TextBlock x:Name="textBlock_avPorts" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="25" FontWeight="Bold" TextDecorations="{x:Null}" RenderTransformOrigin="2.124,0.743" FontSize="16" Width="47" Margin="379,151,0,0" Text="Ports"/>
        <Button x:Name="button_SendFrame" Content="SEND FRAME" HorizontalAlignment="Left" Margin="339,263,0,0" VerticalAlignment="Top" Width="123" BorderBrush="{x:Null}" Background="#FF3E3E42" Foreground="White" FontSize="16" FontWeight="Bold" Click="button_SendFrame_Click"/>

